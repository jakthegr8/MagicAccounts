<div id="comments">
<% for comment in @comments %>
  <div class="comment">
    <%=simple_format comment.content %>
  </div>
<% end %>
</div>


<h2>New Comment</h2>

<% if @commentable %>
  <%= @commentable.account.name %>
<%end%>

<% form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label :activity %><br />
    <%= f.text_field :activity %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>


  

