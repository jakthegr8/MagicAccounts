<div class="group_header wellblue">
    <h3> Accounts </h3>
    <strong><%= link_to "Create Account", new_account_path, :method => "get", :class => 'btn primary' %></strong>
</div>
<% if @ownedaccounts.empty? %>
    You don't own any accounts at this point. <br/><br/>
<%else%>
<table class="table table-striped">
 <thead>
  <tr>
    <th>ID</th>
    <th><%= t("activerecord.attributes.account.name", :default => t("activerecord.labels.name", :default => "Name")) %></th>
    <th>Group</th>
    <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @ownedaccounts.each do |account| -%>
   <tr>
    <td><%= account.id %></td>
    <td><%= link_to account.name, account_path(account) %></td>
    <td><%= link_to Group.find(account.group_id).name, :controller => 'groups', :action => 'show', :id => account.group_id %></td>
    <td><%= account.created_at %></td>
    <td>      
      <%= link_to image_tag("edit_16x16.png"), edit_account_path(account) %>
      <%= link_to image_tag("delicon.png"), account_path(account), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end end -%>
   </tbody>
</table>


