<%= form_tag :url => group_path(@group), :html => { :class => "edit_group", :id => "edit_group" } do |f| -%>
  <input name="_method" type="hidden" value="put" />
  <div class="clearfix">
     <%= f.label :users, t("activerecord.attributes.group.name", :default => "Enter Group Code"), :class => :label %>
    <div class="input">
        <%= text_field_tag :users, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
  <button class="btn primary" type="submit">Join This Group</button> or
	<%= link_to "Cancel", groups_path %>
</div>
<% end -%>
